  <style lang="scss">
    :root {
      --background-color: #efefef;
      --text-color: #545454;
    }

    @mixin scroll-snap-section {
      scroll-snap-align: start;
      width: 100vw;
      height: 100vh;
    }

    @mixin content-title {
      font-size: 3.2rem;
      font-weight: 100;
      margin-bottom: 1rem;
      letter-spacing: 1px;
      color: #545454;
    }

    @mixin content-subtitle {
      font-size: 1.6rem;
      font-weight: 300;
      margin-bottom: 3rem;
      letter-spacing: 0.6px;
      color: #545454;
    }

    @mixin content-text {
      font-weight: 300;
      font-size: 1.2rem;
      letter-spacing: 0.6px;
      line-height: 1.8rem;
      color: #545454;
    }

    .decorationLine {
      width: 10rem;
      height: 0.2px;
      background-color: #545454;
      border: none;
      margin: 0;
      margin-bottom: 1.2rem;
    }

    main {
      scroll-snap-type: y mandatory;
      overflow: scroll;
      height: 100vh;
    }

    #aboutme1 {
      @include scroll-snap-section;
      position: relative;
      z-index: 0;
      background-color: var(--background-color);

      #piano {
        position: absolute;
        object-fit: cover;
        object-position: center;
        top: 11%;
        left: 13%;
        border-radius: 1rem;
        z-index: 5;
      }

      #picker {
        position: absolute;
        object-fit: cover;
        object-position: center;
        top: 14%;
        left: 50%;
        z-index: 4;
      }

      .content {
        background-color: rgba(255, 255, 255, 0.35);
        box-shadow: 1px 1px 10px 0 rgba(46, 46, 46, 0.3);
        border-radius: 1rem;
        backdrop-filter: blur(55px);
        width: 750px;
        z-index: 10;
        position: absolute;
        top: 38%;
        left: 45%;

        padding: 4rem 3rem;
        h2 {
          @include content-title;
        }
        h3 {
          @include content-subtitle;
        }
        p {
          @include content-text;
        }
      }
    }

    #aboutme2 {
      @include scroll-snap-section;
      background-color: var(--background-color);
      position: relative;
      z-index: -10;

      .skills {
        width: 100%;
        height: 100%;
        display: flex;
        justify-content: center;
        align-items: center;
        gap: 4rem;
        padding-top: 4rem;

        .skillsBento {
          padding: 2rem;
          width: 56rem;
          height: 50rem;
          display: grid;
          grid-template-columns: repeat(5, 1fr);
          grid-template-rows: repeat(5, 1fr);
          gap: 1.8rem;

          #tailwindcss {
            border-radius: 0;
          }

          #expressjs {
            border-radius: 0;
          }

          div {
            background-color: #fff;
            padding: 1.8rem;
            border-radius: 1rem;
            box-shadow: 0 0 10px 0 rgba(0, 0, 0, 0.1);
            position: relative;

            &:before,
            &:after {
              content: "";
              top: 50%;
              left: 50%;
              width: 100%;
              height: 100%;
              position: absolute;
              transform: translate(-50%, -50%);
              background-image: conic-gradient(
                from 180deg,
                #d71b1b,
                #e2c41b,
                #37d410,
                #17d1ce,
                #278ebd,
                #275da3,
                #a846d6,
                #d646be,
                #3ed676,
                #57c716,
                #a33895,
                #d71b1b
              );
              border-radius: 1rem;
              z-index: -5;
            }
            &:before {
              filter: blur(1.5rem);
              opacity: 0.4;
            }
          }

          img {
            border-radius: 1rem;
            height: 64px;
            width: auto;
            object-fit: cover;
            object-position: center;
          }

          .item1 {
            grid-column: 1 / span 3;
            grid-row: 1 / span 2;
            display: flex;
            justify-content: center;
            align-items: center;
            flex-wrap: wrap;
            gap: 0 2rem;
          }
          .item2 {
            grid-column: 4 / span 2;
            grid-row: 1 / span 2;
            display: flex;
            justify-content: center;
            align-items: center;
            flex-wrap: wrap;
            gap: 0 2rem;
          }

          .item3 {
            grid-column: 1 / span 3;
            display: flex;
            justify-content: center;
            align-items: center;
            flex-wrap: wrap;
            gap: 0 2rem;
          }

          .item4 {
            grid-column: 4 / span 2;
            grid-row: 3 / span 2;
            display: flex;
            justify-content: center;
            align-items: center;
            flex-direction: column;
            gap: 2.6rem;
          }

          .item5 {
            grid-column: 1 / span 3;
            display: flex;
            justify-content: center;
            align-items: center;
            flex-wrap: wrap;
            gap: 2.4rem;
          }
        }

        .content {
          padding-bottom: 10rem;
          max-width: 450px;
          h2 {
            @include content-title;
            margin-bottom: 3rem;
          }
          p {
            margin-top: 4rem;
            @include content-text;
          }
        }
      }
    }
