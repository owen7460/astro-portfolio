  <style lang="scss">
    @mixin scroll-snap-section {
      scroll-snap-align: start;
      width: 100vw;
      height: 100vh;
    }

    @mixin content-title {
      font-size: 3.2rem;
      font-weight: 100;
      margin-bottom: 1rem;
      letter-spacing: 1px;
    }

    @mixin content-subtitle {
      font-size: 1.6rem;
      font-weight: 300;
      margin-bottom: 3rem;
      letter-spacing: 0.6px;
    }

    @mixin content-text {
      font-weight: 300;
      font-size: 1rem;
      letter-spacing: 0.6px;
      line-height: 1.8rem;
    }

    .decorationLine {
      width: 12rem;
      height: 0.2px;
      background-color: #373737;
      border: none;
      margin: 0;
      margin-bottom: 1.2rem;
    }

    main {
      scroll-snap-type: y mandatory;
      overflow: scroll;
      height: 100vh;
    }

    #aboutme1 {
      @include scroll-snap-section;
      position: relative;
      z-index: 0;
      background-color: #e1e1e1;

      #piano {
        position: absolute;
        object-fit: cover;
        object-position: center;
        top: 35%;
        left: 33%;
        transform: translate(-50%, -50%);
        border-radius: 1rem;
        z-index: 5;
      }

      .content {
        background-color: rgba(255, 255, 255, 0.35);
        box-shadow: 1px 1px 10px 0 rgba(46, 46, 46, 0.3);
        border-radius: 1rem;
        backdrop-filter: blur(55px);
        width: 750px;
        z-index: 10;
        color: #373737;
        position: absolute;
        top: 61%;
        left: 59%;
        transform: translate(-50%, -50%);

        padding: 4rem 3rem;
        h2 {
          @include content-title;
        }
        h3 {
          @include content-subtitle;
        }
        p {
          @include content-text;
        }
      }
    }

    #aboutme2 {
      @include scroll-snap-section;
      background-color: #e1e1e1;
      position: relative;
      z-index: -10;

      .skills {
        width: 100%;
        height: 100%;
        display: flex;
        justify-content: center;
        align-items: center;
        gap: 4rem;
        padding-top: 4rem;

        .skillsBento {
          padding: 2rem;
          width: 56rem;
          height: 50rem;
          display: grid;
          grid-template-columns: repeat(5, 1fr);
          grid-template-rows: repeat(5, 1fr);
          gap: 1.8rem;

          #tailwindcss {
            border-radius: 0;
          }

          #expressjs {
            border-radius: 0;
          }

          div {
            background-color: #fff;
            padding: 1.8rem;
            border-radius: 1rem;
            box-shadow: 0 0 10px 0 rgba(0, 0, 0, 0.1);
            position: relative;

            &:before,
            &:after {
              content: "";
              top: 50%;
              left: 50%;
              width: 100%;
              height: 100%;
              position: absolute;
              transform: translate(-50%, -50%);
              background-image: conic-gradient(
                from 180deg,
                #d71b1b,
                #e2c41b,
                #37d410,
                #17d1ce,
                #278ebd,
                #275da3,
                #a846d6,
                #d646be,
                #3ed676,
                #57c716,
                #a33895,
                #d71b1b
              );
              border-radius: 1rem;
              z-index: -5;
            }
            &:before {
              filter: blur(1.5rem);
              opacity: 0.4;
            }
          }

          img {
            border-radius: 1rem;
            height: 64px;
            width: auto;
            object-fit: cover;
            object-position: center;
          }

          .item1 {
            grid-column: 1 / span 3;
            grid-row: 1 / span 2;
            display: flex;
            justify-content: center;
            align-items: center;
            flex-wrap: wrap;
            gap: 0 2rem;
          }
          .item2 {
            grid-column: 4 / span 2;
            grid-row: 1 / span 2;
            display: flex;
            justify-content: center;
            align-items: center;
            flex-wrap: wrap;
            gap: 0 2rem;
          }

          .item3 {
            grid-column: 1 / span 3;
            display: flex;
            justify-content: center;
            align-items: center;
            flex-wrap: wrap;
            gap: 0 2rem;
          }

          .item4 {
            grid-column: 4 / span 2;
            grid-row: 3 / span 2;
            display: flex;
            justify-content: center;
            align-items: center;
            flex-direction: column;
            gap: 2.6rem;
          }

          .item5 {
            grid-column: 1 / span 3;
            display: flex;
            justify-content: center;
            align-items: center;
            flex-wrap: wrap;
            gap: 2.4rem;
          }
        }

        .content {
          padding-bottom: 10rem;
          max-width: 450px;
          color: #545454;
          h2 {
            @include content-title;
            margin-bottom: 3rem;
          }
          p {
            margin-top: 4rem;
            @include content-text;
          }
        }
      }
    }
    #aboutme3 {
      @include scroll-snap-section;

      .desert-bg {
        position: relative;
        height: 100vh;
        background:
          radial-gradient(
            circle at 70% 20%,
            rgba(255, 230, 180, 0.6),
            transparent 40%
          ),
          linear-gradient(to bottom, #f5e6c8, #eac38a, #d8a35c, #b87a3c);

        &::before {
          content: "";
          position: absolute;
          top: 0;
          left: 0;
          width: 100%;
          height: 220px;

          background: linear-gradient(
            to bottom,
            #e1e1e1,
            rgba(225, 225, 225, 0)
          );
          pointer-events: none;
          z-index: 5;
        }
      }

      .path {
        position: absolute;
        inset: 0;
        width: 120%;
        left: -10%;
        height: 100%;
        stroke-dasharray: 1000;
        stroke-dashoffset: 1000;
        opacity: 0;
        animation: opacity 0.3s ease-out;

        &.animate {
          animation: drawPath 3s ease-in-out forwards;
          opacity: 1;
        }

        @keyframes drawPath {
          to {
            stroke-dashoffset: 0;
          }
        }
      }

      .products {
        position: absolute;
        top: 40%;
        left: 50%;
        transform: translate(-50%, -50%);
        z-index: 10;
        max-width: 850px;
        display: flex;
        flex-direction: column;
        align-items: flex-start;
        gap: 2rem;
        h2 {
          @include content-title;
        }
        p {
          @include content-text;
        }
      }
    }
    #aboutme4 {
      @include scroll-snap-section;
      background-color: yellow;
    }
  </style>

  <script>
    const path = document.querySelector(".path");

    const observer = new IntersectionObserver(
      (entries) => {
        entries.forEach((entry) => {
          if (entry.isIntersecting) {
            path?.classList.add("animate");
            observer.unobserve(entry.target);
          }
        });
      },
      { threshold: 0.5 },
    );

    observer.observe(path!);
  </script>
</main>
