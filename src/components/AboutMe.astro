          linear-gradient(to bottom, #f5e6c8, #eac38a, #d8a35c, #b87a3c);

        &::before {
          content: "";
          position: absolute;
          top: 0;
          left: 0;
          width: 100%;
          height: 220px;
          background: linear-gradient(
            to bottom,
            #e1e1e1,
            rgba(225, 225, 225, 0)
          );
          pointer-events: none;
          z-index: 5;
        }

        .path {
          position: absolute;
          inset: 0;
          width: 110%;
          left: -10%;
          height: 100%;
          stroke-dasharray: 1000;
          stroke-dashoffset: 1000;
          opacity: 0;
          animation: opacity 0.3s ease-out;

          &.animate {
            animation: drawPath 3s ease-in-out forwards;
            opacity: 1;
          }
        }

        @keyframes drawPath {
          to {
            stroke-dashoffset: 0;
          }
        }
      }

      .products {
        position: absolute;
        top: 20%;
        left: 20%;
        z-index: 10;
        max-width: 850px;
        display: flex;
        flex-direction: column;
        align-items: flex-start;
        gap: 2rem;
        h2 {
          @include content-title;
        }
        p {
          @include content-text;
        }
      }
    }
