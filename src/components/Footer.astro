import instagram from "../assets/instagram.png";
---

<footer>
  <h2>Owen Ouyang</h2>
  <p>Full-Stack Developer & Designer Based in Calgary, Canada</p>
  <p>Frontend | Backend | Design</p>
  <div class="slogan">
    <p>Let’s build something amazing together</p>
    <p>Available for new opportunities</p>
  </div>
  <p>
    Email: <a class="email" href="mailto:ouyangxiongwen@gmail.com"
      >ouyangxiongwen@gmail.com</a
    >
  </p>
  <p>Phone: +1 368-999-2887</p>
  <div class="social-links">
    <a href="https://www.linkedin.com/in/xiongwenouyang/"
      ><Image src={linkedin} alt="linkedin" width="24" height="24" /></a
    >
    <a href="https://github.com/owen7460"
      ><Image src={github} alt="github" width="24" height="24" /></a
    >
    <a href="https://www.instagram.com/owenwebdesignerdeveloper/"
      ><Image src={instagram} alt="instagram" width="24" height="24" /></a
    >
    <a href="https://www.behance.net/xiongwenouyang"
